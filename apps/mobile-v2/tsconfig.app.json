{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@drishti/shared": ["../../packages/shared/src/index.ts"],
      "@drishti/shared/*": ["../../packages/shared/src/*"]
    },
    "moduleResolution": "bundler",
    "types": ["react", "react-native", "jest", "node"]
  },
  "include": ["src", "jest.setup.after.js", "../../packages/shared/src/**/*"],
  "exclude": ["**/__tests__/**", "../../packages/shared/**/__tests__/**"]
}
