{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "composite": true,
    "types": ["react", "react-native", "jest", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@drishti/shared/*": ["../../packages/shared/src/*"],
      "@drishti/shared": ["../../packages/shared/src/index"]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "app.config.js",
    "../../packages/shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/tests/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
