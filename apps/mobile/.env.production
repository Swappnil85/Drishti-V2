# Drishti Mobile App - Production Environment Configuration

# API Configuration
EXPO_PUBLIC_API_URL=https://api.your-production-domain.com
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_API_VERSION=v1

# App Configuration
EXPO_PUBLIC_APP_NAME=Drishti
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=production
EXPO_PUBLIC_BUILD_NUMBER=1

# Authentication Configuration
EXPO_PUBLIC_AUTH_TIMEOUT=30000
EXPO_PUBLIC_TOKEN_REFRESH_THRESHOLD=300000
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5
EXPO_PUBLIC_LOCKOUT_DURATION=900000

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL=300000
EXPO_PUBLIC_SYNC_RETRY_ATTEMPTS=3
EXPO_PUBLIC_SYNC_RETRY_DELAY=5000
EXPO_PUBLIC_SYNC_BATCH_SIZE=100
EXPO_PUBLIC_OFFLINE_QUEUE_MAX_SIZE=1000

# Security Configuration
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_SESSION_TIMEOUT=3600000
EXPO_PUBLIC_AUTO_LOCK_TIMEOUT=300000
EXPO_PUBLIC_REQUIRE_PIN_BACKUP=true
EXPO_PUBLIC_PIN_LENGTH=6

# Network Configuration
EXPO_PUBLIC_REQUEST_TIMEOUT=30000
EXPO_PUBLIC_RETRY_ATTEMPTS=3
EXPO_PUBLIC_RETRY_DELAY=1000
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Analytics and Monitoring
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ANALYTICS_ENDPOINT=https://analytics.your-domain.com
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_SENTRY_DSN=https://your-mobile-sentry-dsn@sentry.io/project-id

# Feature Flags
EXPO_PUBLIC_ENABLE_OAUTH_LOGIN=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_LOGIN=true
EXPO_PUBLIC_ENABLE_PIN_LOGIN=true
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# UI Configuration
EXPO_PUBLIC_THEME_PRIMARY_COLOR=#007AFF
EXPO_PUBLIC_THEME_SECONDARY_COLOR=#34C759
EXPO_PUBLIC_THEME_ERROR_COLOR=#FF3B30
EXPO_PUBLIC_THEME_WARNING_COLOR=#FF9500

# Performance Configuration
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_IMAGE_CACHE_SIZE=100
EXPO_PUBLIC_DATABASE_CACHE_SIZE=50

# Privacy and Compliance
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://your-domain.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://your-domain.com/terms
EXPO_PUBLIC_SUPPORT_EMAIL=support@your-domain.com
EXPO_PUBLIC_SUPPORT_URL=https://support.your-domain.com

# Debug Configuration (should be false in production)
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=false
EXPO_PUBLIC_ENABLE_SYNC_DEBUG=false
EXPO_PUBLIC_ENABLE_NETWORK_DEBUG=false
EXPO_PUBLIC_ENABLE_FLIPPER=false

# App Store Configuration
EXPO_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/drishti/id123456789
EXPO_PUBLIC_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.drishti.app
EXPO_PUBLIC_MINIMUM_APP_VERSION=1.0.0

# Notification Configuration
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_NOTIFICATION_CATEGORIES=sync,security,updates
EXPO_PUBLIC_QUIET_HOURS_START=22:00
EXPO_PUBLIC_QUIET_HOURS_END=08:00

# Accessibility Configuration
EXPO_PUBLIC_ENABLE_ACCESSIBILITY=true
EXPO_PUBLIC_FONT_SCALE_MIN=0.8
EXPO_PUBLIC_FONT_SCALE_MAX=1.5
EXPO_PUBLIC_HIGH_CONTRAST_MODE=false

# Localization Configuration
EXPO_PUBLIC_DEFAULT_LOCALE=en-US
EXPO_PUBLIC_SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,ja-JP
EXPO_PUBLIC_ENABLE_RTL=true

# Development URLs (for staging/testing)
EXPO_PUBLIC_STAGING_API_URL=https://staging-api.your-domain.com
EXPO_PUBLIC_DEV_API_URL=https://dev-api.your-domain.com
