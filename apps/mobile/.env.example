# Drishti Mobile App Environment Configuration

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_API_TIMEOUT=30000

# App Configuration
EXPO_PUBLIC_APP_NAME=Drishti
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL=300000
EXPO_PUBLIC_SYNC_RETRY_ATTEMPTS=3
EXPO_PUBLIC_SYNC_RETRY_DELAY=5000

# Security Configuration
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_SESSION_TIMEOUT=3600000

# Debug Configuration
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=true
EXPO_PUBLIC_ENABLE_SYNC_DEBUG=true
