{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "noEmit": false,
    "composite": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@drishti/shared/*": ["../../packages/shared/src/*"],
      "@drishti/shared": ["../../packages/shared/src/index"]
    }
  },
  "include": ["src/**/*", "../../packages/shared/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
