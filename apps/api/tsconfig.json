{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "noEmit": false,
    "composite": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@drishti/shared/*": ["../../packages/shared/src/*"],
      "@drishti/shared": ["../../packages/shared/src/index"]
    }
  },
  "include": ["src/**/*", "../../packages/shared/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/config/environment.ts",
    "src/config/database-security.ts",
    "src/routes/monitoring.ts",
    "src/services/monitoring/SecurityMonitor.ts"
  ]
}
